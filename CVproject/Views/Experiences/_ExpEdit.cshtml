@model CVproject.Models.Experience

<div class="modal-body">
    @using (Html.BeginForm("EditExperience", "Experiences", FormMethod.Post))
    {
        <input type="hidden" asp-for=@Model.Id />
        <div class="form-group">
            @Html.LabelFor(e => e.Employer)<br />
            @Html.TextBoxFor(e => e.Employer, new { @class = "form-control" })<br />
        </div>

        <div class="form-group">
            @Html.LabelFor(e => e.Title)<br />
            @Html.TextBoxFor(e => e.Title, new { @class = "form-control" })<br />
        </div>
        
    <div class="form-group">
    @Html.LabelFor(e => e.StartYear)<br />
    @Html.DropDownListFor(e => e.StartYear,
    new SelectList(Enumerable.Range(1950, 74).Reverse()), Model.StartYear.ToString()
    ,
    new { @class = "form-control" }) <br />

    </div>

    <div class="form-group">
    @Html.LabelFor(e => e.EndYear)<br />
    @Html.DropDownListFor(e => e.EndYear,
    new SelectList(Enumerable.Range(1950, 74).Reverse()),Model.EndYear.ToString(),
    new { @class = "form-control" })
    </div>
        <input type="hidden" asp-for=@Model.CvId />
        <input type="hidden" asp-for=@Model.Cv />

        <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Save changes</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
    }

</div>