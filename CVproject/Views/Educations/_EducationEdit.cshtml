@model CVproject.Models.Education

<div class="modal-body">
    @using (Html.BeginForm("EditEducation", "Educations", FormMethod.Post))
    {
        <p class="text-danger m-2">@TempData["errorMessageEdit"]</p>
        <input type="hidden" asp-for=@Model.Id />
        <div class="form-group">
            @Html.LabelFor(e => e.University)<br />
            @Html.TextBoxFor(e => e.University, new { @class = "input-modal form-control", @required  = "required" })<br />
        </div>

        <div class="form-group">
            @Html.LabelFor(e => e.Orientation)<br />
            @Html.TextBoxFor(e => e.Orientation, new { @class = "input-modal form-control", @required  = "required" })<br />
        </div>

        <div class="form-group">
            @Html.LabelFor(e => e.StartYear)<br />
            @Html.DropDownListFor(e => e.StartYear,
        new SelectList(Enumerable.Range(1950, 74).Reverse()), Model.StartYear.ToString()
        ,
        new { @class = "form-control", @required  = "required" }) <br />

        </div>

        <div class="form-group">
            @Html.LabelFor(e => e.EndYear)<br />
            @Html.DropDownListFor(e => e.EndYear,
        new SelectList(Enumerable.Range(1950, 74).Reverse()),Model.EndYear.ToString(),
        new { @class = " form-control", @required  = "required" })
        </div>
        <input type="hidden" asp-for=@Model.CvId />
        <input type="hidden" asp-for=@Model.Cv />

        <div class="modal-footer">
            <button type="submit" id="btnsave" class="btn btn-primary" >Save changes</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
    }

</div>

