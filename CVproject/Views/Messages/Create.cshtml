@model CVproject.ViewModels.MessageViewModel

@{
    ViewData["Title"] = "Create";
}


<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @if (Model != null && Model.SenderName != null)
    {
        
        <label asp-for="SenderName" class="control-label">From: @Model.SenderName</label>
        <input type="hidden" asp-for="SenderName" />
        
    }
    else
    {
    <div class="form-group">
        <label asp-for="SenderName" class="control-label">From:</label>
        <input asp-for="SenderName" class="form-control" />
        <span asp-validation-for="SenderName" class="text-danger"></span>
    </div>
    }
    <label class="control-label">To: @Model.ReceiverName</label>
    <input type="hidden" asp-for="ReceiverName" />
    <div class="form-group">
        <label asp-for="Heading" class="control-label"></label>
        <input asp-for="Heading" class="form-control" />
        <span asp-validation-for="Heading" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Text" class="control-label"></label>
        <input asp-for="Text" class="form-control" />
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="ReceiverId" />
  
    <div class="form-group">
        <input type="submit" value="Send" class="btn btn-primary" />
    </div>
    @if(TempData != null)
    {
        <p>@TempData["message"]</p>
    }
</form>

<div>
    <a asp-controller="Persons" asp-action="Index">Back to List</a>
</div>

